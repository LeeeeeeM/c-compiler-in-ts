{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "./lib/*": ["./lib/*.ts"]
    }
  },
  "include": ["cpc.ts", "lib/**/*"],
  "exclude": ["node_modules", "dist"]
}
